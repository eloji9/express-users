<h2>
    User Settings
</h2>

{{> flashMessages}}

<form method="POST" action="/process-settings">
    <label>
        <input type="text" name="fullName" value="{{blahUser.fullName}}" placeholder="Lando Carlissian"/>
    </label>
    <br/>

    <h3>
        Change Your Password
    </h3>
    <label>
        Old Password
            <input type="password" name="oldPassword" placeholder="*********"/>
    </label>
    <br/>

    <label>
        New Password
            <input type="password" name="newPassword" placeholder="*********"/>
    </label>
    <br/>

    <button>
        Save Settings
    </button>

</form>